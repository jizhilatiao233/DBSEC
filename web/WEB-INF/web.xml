<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome file Configuration -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Product Servlet -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>org.example.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <!-- Purchase Servlet -->
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>org.example.PurchaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>

    <!-- CheckSession Servlet -->
    <servlet>
        <servlet-name>CheckSessionServlet</servlet-name>
        <servlet-class>org.example.CheckSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckSessionServlet</servlet-name>
        <url-pattern>/CheckSession</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.example.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <!-- StaffLogin Servlet -->
    <servlet>
        <servlet-name>StaffLoginServlet</servlet-name>
        <servlet-class>org.example.StaffLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffLoginServlet</servlet-name>
        <url-pattern>/StaffLogin</url-pattern>
    </servlet-mapping>

    <!-- CustomerRegister Servlet -->
    <servlet>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <servlet-class>org.example.CustomerRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <url-pattern>/CustomerRegister</url-pattern>
    </servlet-mapping>

    <!-- CustomerLogin Servlet -->
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>org.example.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/CustomerLogin</url-pattern>
    </servlet-mapping>

</web-app>